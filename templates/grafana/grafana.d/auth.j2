  {% endif %}
  {% if grafana_auth.github.token_url is defined and
        grafana_auth.github.token_url | string | length > 0 %}
token_url =  {{ grafana_auth.github.token_url }}
  {% endif %}
  {% if grafana_auth.github.api_url is defined and
        grafana_auth.github.api_url | string | length > 0 %}
api_url =  {{ grafana_auth.github.api_url }}
  {% endif %}
  {% if grafana_auth.github.allowed_domains is defined and
        grafana_auth.github.allowed_domains | string | length > 0 %}
allowed_domains = {{ grafana_auth.github.allowed_domains }}
  {% endif %}
  {% if grafana_auth.github.team_ids is defined and
        grafana_auth.github.team_ids | string | length > 0 %}
team_ids = {{ grafana_auth.github.team_ids }}
  {% endif %}
  {% if grafana_auth.github.team_ids is defined and
        grafana_auth.github.team_ids | string | length > 0 %}
team_ids = {{ grafana_auth.github.team_ids }}
  {% endif %}
{% endif %}
