{% endif %}
{% if grafana_auth.azure_auth_enabled is defined %}
azure_auth_enabled = {{ grafana_auth.azure_auth_enabled | bool | ternary('true', 'false') }}
{% endif %}
{% if grafana_auth.anonymous.enabled %}

[auth.anonymous]
enabled = {{ grafana_auth.anonymous.enabled | bool | ternary('true', 'false') }}
  {% if grafana_auth.anonymous.org_name is defined and
        grafana_auth.anonymous.org_name | string | length > 0 %}
org_name = {{ grafana_auth.anonymous.org_name }}
  {% endif %}
