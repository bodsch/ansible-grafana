{% if grafana_auth.basic.enabled %}

[auth.basic]
enabled = {{ grafana_auth.basic.enabled | bool | ternary('true', 'false') }}
{% endif %}
{% if grafana_auth.proxy.enabled %}

[auth.proxy]
;enabled = {{ grafana_auth.proxy.enabled | bool | ternary('true', 'false') }}
;header_name = X-WEBAUTH-USER
;header_property = username
;auto_sign_up = true
;sync_ttl = 60
;whitelist = 192.168.1.1, 192.168.2.1
;headers = Email:X-User-Email, Name:X-User-Name
;headers_encoded = false
;enable_login_token = false
{% endif %}
{% if grafana_auth.jwt.enabled %}

[auth.jwt]
;enabled = {{ grafana_auth.jwt.enabled | bool | ternary('true', 'false') }}
;header_name = X-JWT-Assertion
;email_claim = sub
;username_claim = sub
;jwk_set_url = https://foo.bar/.well-known/jwks.json
;jwk_set_file = /path/to/jwks.json
;cache_ttl = 60m
;expected_claims = {"aud": ["foo", "bar"]}
;key_file = /path/to/key/file
;auto_sign_up = false
{% endif %}
{% if grafana_auth.ldap.enabled %}

[auth.ldap]
enabled = {{ grafana_auth.ldap.enabled | bool | ternary('true', 'false') }}
config_file = /etc/grafana/ldap.toml
  {% if grafana_auth.ldap.allow_sign_up is defined %}
allow_sign_up = {{ grafana_auth.ldap.allow_sign_up | bool | ternary('true', 'false') }}
  {% endif %}
  {% if grafana_edition == "enterprise" %}
    {% if grafana_auth.ldap.sync_cron is defined and
          grafana_auth.ldap.sync_cron | string | length > 0 %}
sync_cron = {{ grafana_auth.ldap.sync_cron }}
    {% endif %}
    {% if grafana_auth.ldap.active_sync_enabled is defined %}
active_sync_enabled = {{ grafana_auth.ldap.active_sync_enabled | bool | ternary('true', 'false') }}
    {% endif %}
  {% endif %}
{% endif %}
