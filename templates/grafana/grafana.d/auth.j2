  {% endif %}
  {% if grafana_auth.github.scopes is defined and
        grafana_auth.github.scopes | string | length > 0 %}
scopes =  {{ grafana_auth.github.scopes }}
  {% endif %}
  {% if grafana_auth.github.auth_url is defined and
        grafana_auth.github.auth_url | string | length > 0 %}
