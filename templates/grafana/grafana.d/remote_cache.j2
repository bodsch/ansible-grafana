{% if grafana_remote_cache is defined %}

[remote_cache]
  {% if grafana_remote_cache.type is defined and
        grafana_remote_cache.type | string | length > 0 and
        grafana_remote_cache.type in ["redis", "memcached", "database"] %}
type = {{ grafana_remote_cache.type }}
  {% endif %}
  {% if grafana_remote_cache.connstr is defined and
        grafana_remote_cache.connstr | string | length > 0 %}
connstr = {{ grafana_remote_cache.connstr }}
  {% endif %}
{% endif %}
