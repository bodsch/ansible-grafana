reload() {
  ebegin "Reloading ${SVCNAME}"
  if [ ! -r "${pidfile}" ]; then
    eend 1 "${RC_SVCNAME} not running"
  else
    kill -s HUP $(cat "${pidfile}") 2> /dev/null
    eend $?
  fi
}
