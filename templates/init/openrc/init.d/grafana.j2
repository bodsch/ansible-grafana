description="grafana, a lightweight LDAP server for development, home use, or CI"
pidfile=${pidfile:-"/run/${RC_SVCNAME}.pid"}
user=${user:-${SVCNAME}}
group=${group:-${SVCNAME}}

command="/usr/bin/grafana"
supervisor="supervise-daemon"

command_args="${command_args:--config=/etc/grafana/grafana.conf}"
command_user="${user}:${group}"

command_args_background="--background"
required_files="/etc/grafana/grafana.conf"

output_log="/var/log/${RC_SVCNAME}/${RC_SVCNAME}.log"
error_log="${output_log}"
extra_started_commands="reload"

depend() {
  # need localmount net
  # use dns
  after sysfs net
}

start_pre() {
  [ -d $(dirname ${output_log}) ] ||  mkdir $(dirname ${output_log})
  chown -R ${command_user} $(dirname ${output_log})
  chown -R ${command_user} /var/lib/grafana/
}

